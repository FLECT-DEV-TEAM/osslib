# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.toIndex
GET     /index.html                             Application.index
GET     /lang/{<en|ja>lang}                     Application.changeLang(lang)
GET     /apps/{filename}.html                   Application.view(filename)
GET     /libs/{filename}.html                   Application.view(filename)

# Ignore favicon requests
GET     /favicon.ico                            staticFile:public/images/favicon.ico

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
